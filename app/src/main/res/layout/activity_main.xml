<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="#3A2A2A"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewResutltado"
        android:layout_width="330dp"
        android:layout_height="111dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="#E8E3E3"
        android:gravity="center|right"
        android:padding="20dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="92dp"
        android:onClick="btnDividir"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnApagar"
        app:layout_constraintTop_toBottomOf="@+id/txtViewResutltado" />

    <Button
        android:id="@+id/btnQuatro"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="btnQuatro"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSete" />

    <Button
        android:id="@+id/btnPorcentagem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:text="%"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnLimpatr"
        app:layout_constraintTop_toBottomOf="@+id/txtViewResutltado" />

    <Button
        android:id="@+id/btnSomar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:onClick="btnSomar"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnTres"
        app:layout_constraintTop_toBottomOf="@+id/btnSubtrair" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:onClick="btnMultiplicar"
        android:text="X"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnNove"
        app:layout_constraintTop_toBottomOf="@+id/btnDividir" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnTres"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnDois"
        app:layout_constraintTop_toBottomOf="@+id/btnSeis" />

    <Button
        android:id="@+id/btnOito"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnOito"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnSete"
        app:layout_constraintTop_toBottomOf="@+id/btnPorcentagem" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnSeis"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnCinco"
        app:layout_constraintTop_toBottomOf="@+id/btnNove" />

    <Button
        android:id="@+id/btnVirgula"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnPonto"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnZero"
        app:layout_constraintTop_toBottomOf="@+id/btnTres" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnCinco"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnQuatro"
        app:layout_constraintTop_toBottomOf="@+id/btnOito" />

    <Button
        android:id="@+id/btnApagar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:text="s"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnPorcentagem"
        app:layout_constraintTop_toBottomOf="@+id/txtViewResutltado" />

    <Button
        android:id="@+id/btnSete"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="btnSete"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLimpatr" />

    <Button
        android:id="@+id/btnNegativo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="btnNegativo"
        android:text="+/="
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUm" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnZero"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnNegativo"
        app:layout_constraintTop_toBottomOf="@+id/btnDois" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:onClick="calcular"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnVirgula"
        app:layout_constraintTop_toBottomOf="@+id/btnSomar" />

    <Button
        android:id="@+id/btnUm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="btnUm"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuatro" />

    <Button
        android:id="@+id/btnDois"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnDois"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnUm"
        app:layout_constraintTop_toBottomOf="@+id/btnCinco" />

    <Button
        android:id="@+id/btnLimpatr"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="92dp"
        android:onClick="limpar"
        android:text="C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewResutltado" />

    <Button
        android:id="@+id/btnNove"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="btnNove"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnOito"
        app:layout_constraintTop_toBottomOf="@+id/btnApagar" />

    <Button
        android:id="@+id/btnSubtrair"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:onClick="btnSubtrair"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btnSeis"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicar" />

</android.support.constraint.ConstraintLayout>